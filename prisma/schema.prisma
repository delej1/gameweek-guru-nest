generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int      @id @default(autoincrement()) // SERIAL equivalent in Prisma
  username            String   @db.VarChar(50)               // VARCHAR(50)
  email               String   @unique @db.VarChar(100)      // Unique email, VARCHAR(100)
  password            String   @db.VarChar(255)              // Hashed password, VARCHAR(255)
  createdAt           DateTime @default(now())               // TIMESTAMP for account creation
  updatedAt           DateTime @updatedAt                    // TIMESTAMP for last account update, auto-updates
}